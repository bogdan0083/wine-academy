//begin course-reviews
.course-reviews
  .container
    h2.page-title.page-title--dark Отзывы участников

    //begin course-reviews__slider
    .course-reviews__slider
      +course-reviews__item()
      +course-reviews__item()
      +course-reviews__item()
    //end course-reviews__slider

    .course-reviews__btn
      a(href="#").btn.btn--yellow оставить отзыв

