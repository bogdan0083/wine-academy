mixin course-reviews__item()
  //begin course-reviews__item
  .course-reviews__item
    .course-reviews__item-inn
      .course-reviews__left
        .course-reviews__ava
          img(src="assets/img/course-ava.jpg" alt="ava")
      .course-reviews__right
        .course-reviews__rait
          .course-reviews__rait-stars.rait-stars.rait-stars--yellow.rait-stars--04
            +rait-star
            +rait-star
            +rait-star
            +rait-star
            +rait-star
        .course-reviews__info
          .course-reviews__name Анна Иванова,
          .course-reviews__date 01.01.2019
